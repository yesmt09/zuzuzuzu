/* 顶部 */
.top{
  position: relative;
  display: flex;
    width: 100vw;
    padding: 0 20rpx;
    font-size:28rpx;
    border-bottom: 1px solid #f2f2f2;
  }
  .top-text{
    float: left
  }
  /* 下拉框 */
  .top-selected{
      width: 20%;
      border-radius: 10rpx;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border: 1px solid #ccc;
      padding: 0 10rpx;
      font-size: 28rpx;
      justify-content: center;
  }
  /* 下拉内容 */
  .select_box {
    background-color: #fff;
    padding: 0 20rpx;
    width: 20%;
    position: absolute;
    left: 0;
    z-index: 1;
    overflow: hidden;
    text-align: left;
    animation: myfirst 0.5s;
    font-size: 28rpx;
    top: 75rpx;
  }
  .select_one {
      padding-left: 20rpx;
      height: 60rpx;
      position: relative;
      line-height: 60rpx;
      border-bottom: 1px solid #f3f3f3;
  }
  /* 下拉过度效果 */
  @keyframes myfirst {
      from {
          height: 0rpx;
      }
   
      to {
          height: 210rpx;
      }
  }
  /* 下拉图标 */
  .top-selected image{
    height:36rpx;
    width:36rpx;
  }
