
.swiper-tab {
  height: 40px;
  line-height: 40px;
  color:#333 ;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom:1px solid #F2F2F2;
}
 
.swiper-tab-list {
  font-size: 15px;
  width: 25%;
  text-align: center;
}
 
.on {
  border-bottom:2px solid #ff656f;
  color: #ff656f;
}
 
.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #BEBEBE	;
  margin-top:5px;
}
 
.navTopList .order-info {
  text-align: center;
}
 
.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}
 
.navTopList .order-info text {
  font-size: 34rpx;
}
 
.navTopList .order-info text.active {
  color: #ff6662;
}
 
.navTopList .ywc,.navTopList .dfk,.navTopList .yqx {
  flex: 1;
}
 
 
/*订单列表*/
.orderDetails {
  background: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
  font-size: 30rpx;
padding: 0 20rpx;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
}
 
.orderListDetails {
  display: flex;
  border-bottom: 1rpx solid #f3f3f3;
}
.productCount view {
  font-size: 30rpx;
}
 .money {
   font-size: 34rpx;
   color: #ff656f;
 }
.orderListDetails .productImg {
  flex: 1;
  height:180rpx;
  width:120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
 
.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}
 
.orderListDetails .productInfo {
  flex: 4;
  margin: 10rpx 10px 5px 30rpx;
  font-size:10px;
}
 
.orderListDetails view {
  font-size:10px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:1px;
}
 
.productCount {
  height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.productCount>view {
  float: right;
  margin-right: 30rpx;
}